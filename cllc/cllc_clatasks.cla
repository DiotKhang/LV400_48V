//
// Background Task
//
__attribute__((interrupt("background")))  void Cla1BackgroundTask ( void )
{
    #if(CLA_DEBUG == 1)
        __mdebugstop();
    #endif
    #if CLLC_ISR2_RUNNING_ON == CLA_CORE
        #if CLLC_POWER_FLOW == CLLC_POWER_FLOW_PRIM_SEC
            CLLC_runISR2_primToSecPowerFlow();
        #else
            CLLC_runISR2_secToPrimPowerFlow();
        #endif
    #endif
    #if(CLA_DEBUG == 1)
        __mdebugstop();
    #endif
}

